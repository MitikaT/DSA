https://practice.geeksforgeeks.org/problems/second-largest3735/1#

class Solution{
public:	
	int print2largest(int arr[], int n) {
	    int res=-1,largest=0;
	    for(int i=0;i<n;i++){
	        if(arr[i]>arr[largest]){
	            res=largest;
	            largest=i;
	        }
	        else if(arr[i]!=arr[largest])
	            if(res==-1||arr[i]>arr[res])
	                res=i;
	    }
	    if(res!=-1)
	        return arr[res];
	    else
	        return -1;
	}
