https://practice.geeksforgeeks.org/problems/count-the-zeros2550/1

int countZeroes(int arr[], int n) {
    int low=0,high=n-1,ans=n-1;
        while(low<=high){
            int mid=(low+high)/2;
            if(arr[mid]<0)
                high=mid-1;
            else if(arr[mid]>0)
                low=mid+1;
            else{
                ans=mid;
                high=mid-1;
            }
        }
        return n-ans;
}
